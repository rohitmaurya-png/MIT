extends layout

block meta
    title= "Contact Us - Mitvision, CS"

block content
    .container
        .card.row
            .col.s10.offset-s1
                br
                h3.intro Contact Us
                if err
                    h5.red-text #{msg}
                else
                    h5.blue-text #{msg}
                form.col(action='/contact' method='post' role='form')
                    .row
                        .input-field.col.s10.offset-s1.m8
                            input(value=user.email, id='email', name='email', type='email', class='validate' required)
                            label.active(for='email') Your Email
                        .input-field.col.s10.offset-s1.m8
                            input(value=user.firstName, id='name', name='name' required)
                            label.active(for='name') Your Name
                        .input-field.col.s10.offset-s1.m8
                            input(id='subject', name='subject' required)
                            label.active(for='subject') Subject
                        .input-field.col.s10.offset-s1.m8
                            textarea.materialize-textarea(id='mail', name='mail' style="min-height:200px" required)
                            label.active(for='mail') Message
                    .row
                        button.btn.waves-effect.waves-light(type="submit") Submit
                br
                .col.s12
                    .row
                        h5 For any event related queries please check out the specific event pages for contact details:
                        a(href="/events")
                            .btn.waves-light.waves-effect All Events
                    .row

block style
    style
        include ../public/assets/stylesheets/pages/about.css